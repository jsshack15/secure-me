
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_marginTop="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="We are here to secure you.Every day,a number of women are attacked by strangers or people in surroundings.Discover more about th self defense weapons."/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/pep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pep"
            android:src="@drawable/pep"/>

        <ImageButton
            android:id="@+id/stun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="Stun Gun"
            android:onClick="stun"
            android:src="@drawable/stun"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/hidden"
            android:layout_height="wrap_content"
            android:onClick="hidden"
            android:text="Hidden Blades Swords"
            android:src="@drawable/hid" />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/knife"
            android:onClick="knife"
            android:layout_height="wrap_content"
            android:text="Hidden Pen knife"
            android:src="@drawable/pen"/>
    </LinearLayout>
</LinearLayout>

